pkgname=("edizon")
pkgdesc="atomspheer for Nintendo Switch"
pkgver=3.1.0
pkgrel=1
source=(
      "edizon.nro::https://github.com/WerWolv/EdiZon/releases/download/v3.1.0/EdiZon.nro"
      "ovlEdiZon.ovl::https://github.com/WerWolv/EdiZon/releases/download/v3.1.0/ovlEdiZon.ovl"
)
arch=("any")

package() {
	install -Dm755 "${srcdir}/edizon.nro" "${pkgdir}/switch/edizon.nro"
	install -Dm755 "${srcdir}/ovlEdiZon.ovl" "${pkgdir}/switch/.overlays/ovlEdiZon.ovl"
}
