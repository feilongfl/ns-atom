# Maintainer: FeiLong <feilongphone@gmail.com>
pkgname=("tinfoil")
pkgdesc="atomspheer for Nintendo Switch"
pkgver=19.0
pkgrel=1
source=(
      "tinfoil.zip::https://tinfoil.media/repo/Tinfoil%20Self%20Installer%20%5B050000BADDAD0000%5D%5B19.0%5D%5Bv1%5D.zip"
)
arch=("any")

package() {
      pushd ${srcdir}/switch
      find -type f -exec install -Dm 755 "{}" "${pkgdir}/switch/{}" \;
      popd

      install -Dm755 ${SRCPKGDEST}/tinfoil-locations.conf ${pkgdir}/switch/tinfoil/locations.conf
}
md5sums=('866f242db9471b9312eadc5407f0fc17')
