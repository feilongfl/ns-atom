# Maintainer: FeiLong <feilongphone@gmail.com>
pkgname=("tinfoil")
pkgdesc="atomspheer for Nintendo Switch"
pkgver=15.0
pkgrel=1
source=(
      "tinfoil.zip::https://tinfoil.media/repo/Tinfoil%20Self%20Installer%20%5B050000BADDAD0000%5D%5B15.0%5D%5Bv18%5D.zip"
)
arch=("any")

package() {
      pushd ${srcdir}/switch
      find -type f -exec install -Dm 755 "{}" "${pkgdir}/switch/{}" \;
      popd

      install -Dm755 ${SRCPKGDEST}/tinfoil-locations.conf ${pkgdir}/switch/tinfoil/locations.conf
}
md5sums=('3cb886fe7d58d87f7b01face73dcd69d')
